@model Proje.Models.Payment

@{
    ViewData["Title"] = "Payment Successful !";
    TempData.Keep("CardId");
    TempData.Keep("BookingId");
}
<!-- banner part start-->
<section class="banner_part" style="height: 550px;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="banner_text">
                    <div class="banner_text_iner">
                        <h5>Best way to tour</h5>
                        <h1>Lorem ipsum dolor amet consec</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<div class="d-flex ">
    <div class="container text-center  justify-content-center" style="       
        border: 1px white solid;
        width: 60%;
        padding: 20px 20px;
        background-color: #ffcc00;
  ">
        
        <h1 style="color: white">@ViewData["Title"]</h1>
        <hr />
        <div class="row d-flex justify-content-center">
            <div class="">
                <form asp-action="Create">
                    <p></p>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="BookingId" value=@TempData["BookingId"] />
                        <input type="hidden" asp-for="CardId" value=@TempData["CardId"] />
                        <input type="submit" value="Back To Homepage" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
