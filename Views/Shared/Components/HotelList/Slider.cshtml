@model IEnumerable<Proje.Models.Hotel>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<div class="container">
    <h1>@localizer["Partner Hotels"]</h1>
    <div id="carouselExampleCaptions" class="carousel slide col-12" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            @for (int i = 1; i < Model.Count(); i++)
                {
            <li data-target="#carouselExampleCaptions" data-slide-to=@i></li>
                }
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src=@Model.First().image class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@Model.First().name, <span class="country">@Model.First().city.name</span></h5>
                </div>
            </div>
            @foreach (var item in Model.TakeLast(Model.Count() - 1))
                {
            <div class="carousel-item">
                <img src=@item.image class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@item.name, <span class="country">@item.city.name</span></h5>
                </div>
            </div>
                }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

