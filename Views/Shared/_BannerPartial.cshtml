@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    var height = "height:" + TempData["height"];
    var style = height != null ? height : "";
}

<section class="banner_part" style=@style>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="banner_text">
                    <div class="banner_text_iner">
                        <h5>@localizer["h5"]</h5>
                        <h1>@localizer["h1"]</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
