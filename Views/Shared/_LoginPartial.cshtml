@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
<a class="manage text-center" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@localizer["Welcome"] @User.Identity.Name!<br /><small>@localizer["manage"] </small></a>
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="btn_1 d-lg-block">@localizer["Logout"]</button>
    </form>
}
else
{
<a asp-area="Identity" asp-page="/Account/Login" class="btn_1 d-lg-block ">@localizer["Login"]</a>
    <a asp-area="Identity" asp-page="/Account/Register" class="btn_1 d-lg-block " style="margin-left: 10px">@localizer["Register"]</a>
}


